<% include partials/header %>

  <style>
    body{
      background-color: red;
    }
  </style>
  </head>
<body>
  <% include partials/topbar %>
<div class="container" class = "left">
      <div class="row">
        <div class="col-lg-5 thumbnail">
          <br>
          <h3>Following are the result for <%= result[0].constituency %> </h3>
          <br>
          <ul>
            
		    <% result.forEach(function(res) { %>
		      <li>
		          <strong>
		              <%= res["name"] %>
		          </strong> 
		          - <%=res["aadhar_no"]%>
		          - <%=res["email"]%>
		      </li>
		    	<% }) %>
			</ul>
      <br>
      <a href="/admin">Search for another constituency.</a>
        </div>
        <div class="col-lg-2"></div>
        <div class="col-lg-5 well" >
          <div class="container-fluid">
              <h3 class="text-center">Verify Voter</h3>
              <div class="container-fluid">

                <!-- Registration form for user -->
                <form action="/admin_results" method="POST"> 
                    <div class="form-group col-md-12">
                      <label for="aadhar_no">Aadhar Number</label>
                      <input type="text" class="form-control" id="aadhar_no" name="aadhar_no" placeholder="Aadhar Number">
                    </div>
                    <div class="form-group col-md-12">
                      <label for="v_id">Voter ID</label>
                      <input type="v_id" class="form-control" id="v_id" name="v_id" placeholder="Voter ID">
                    </div>

                  <div class="form-group col-md-12">
                      <label for="ps">Password</label>
                      <input type="password" class="form-control" id="ps" name="ps" placeholder="Password">
                  </div>

                  <div class="form-group col-md-12">
                      <label for="label">Label</label>
                      <p><strong>HINT :</strong> Admin= 7 , Voter = 1, Candidate = 3 </p>
                      <input type="text" class="form-control" id="label" name="label" placeholder="label">
                  </div>


                  <div class="col-md-12">
                      <button type="submit" class="btn btn-primary">Verify Voter</button>
                  </div> 
                </form>
              </div>
          </div>
        </div>
      </div>
    </div>
</div>


  <% include partials/footer %>